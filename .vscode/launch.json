{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python: Remote Attach",
            "type": "debugpy",
            "request": "attach",
            "connect": {
                "host": "0.0.0.0",
                "port": 5558
            },
            "pathMappings": [
                {
                    "localRoot": "${workspaceFolder}/doSomeReps",
                    "remoteRoot": "/app"
                }
            ],
            "justMyCode": false
        },
        {
            "name": "Attach to Flask",
            "type": "python",
            "request": "attach",
            "port": 5678,
            "host": "localhost",
            "pathMappings": [
                {
                    "localRoot": "${workspaceFolder}/doSomeReps",
                    "remoteRoot": "/app"
                }
            ],
            "justMyCode": false
        }
    ]
}