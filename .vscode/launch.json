    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python: Flask",
            "type": "python",
            "request": "launch",
            "module": "flask",
            "env": {
                "FLASK_APP": "wsgi.py",
                "FLASK_DEBUG": "1",
                "PYTHONPATH": "${workspaceRoot}"
            },
            "args": [
                "run",
                "--no-reload",
                "--port",
                "12000"
            ],
            "jinja": true,
            "justMyCode": false
        }
    ]
}